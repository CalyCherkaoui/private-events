<p id="notice"><%= notice %></p>

<p>
  <strong>Full name:</strong>
  <%= @user.full_name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<h3> List of the past events created by: <%= @user.username %> </h3>
<ul>
  <% @past_events.each do |eve| %>
    <li> Title: <%= eve.title %> Location: <%= eve.location %> </li>
  <% end %>
</ul>

<h3> List of the upcomming events created by: <%= @user.username %> </h3>
<ul>
  <% @future_events.each do |eve| %>
    <li> Title: <%= eve.title %> Location: <%= eve.location %> </li>
  <% end %>
</ul>
<br><br>

<h2> List of the previous events attended by <%= @user.username %> : </h2>
<ul>
  <% @previous_events.each do |event| %>
         <li>Title: <%= event.title %> Location: <%= event.location %> Date: <%= event.event_date %></li>
  <% end %>
</ul>

<h2> List of the previous events that <%= @user.username %> will attend : </h2>

<ul>
  <% @upcomming_events.each do |event| %>
     <li>Title: <%= event.title %> Location: <%= event.location %> Date: <%= event.event_date %></li>
  <% end %>
</ul>
