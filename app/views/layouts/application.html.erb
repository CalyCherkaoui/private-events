<!DOCTYPE html>
<html>

<head>
  <title>PrivateEvents</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <% if user_loggedin? %>
    <small><%= link_to 'Create Event', new_event_path %></small> |
  <% end %> 
  <small><%= link_to 'Events list', events_path %></small> |
  <small><%= link_to 'Users list', users_path %></small><br><br>

  <% if !user_loggedin? %>
    <%= link_to 'login', login_path %>
    <%= link_to 'Signup', signup_path %>
  <% else %>
    <%= link_to current_user.full_name, user_path(current_user) %>
    <%= link_to 'log out', logout_path %>
  <% end %>

  <%= yield %>

</body>


</html>